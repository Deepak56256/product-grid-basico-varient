<script>
const cartState = {
  count: 0,
  isUpdating: false,
  isFirstAdd: true
};

function updateVariant(input, productId) {
  document.getElementById("variant-id-" + productId).value = input.value;
}

function openPopup() {
  document.getElementById("fitPopup").style.display = "flex";
  document.body.style.overflow = "hidden";
}

function closePopup() {
  document.getElementById("fitPopup").style.display = "none";
  document.body.style.overflow = "auto";
}

const CartFunctions = {
  init() {
    this.cacheDOM();
    this.bindEvents();
    this.getInitialCartCount();
  },

  cacheDOM() {
    this.cartDrawer = document.querySelector('cart-drawer') || document.querySelector('.cart-drawer');
    this.cartCountEls = document.querySelectorAll('.header__cart-count');
    this.cartDrawerContents = document.querySelector('cart-drawer-items') || document.querySelector('.cart-drawer__items');
  },

  bindEvents() {
    document.addEventListener('click', (e) => {
      const addToCartBtn = e.target.closest('button.add-to-cart');
      if (addToCartBtn) {
        e.preventDefault();
        const form = addToCartBtn.closest('form');
        this.addToCart(form);
      }
    });

    document.addEventListener('cart:updated', (e) => {
      this.handleCartUpdated(e.detail ? e.detail.cart : null);
    });
  },

  getInitialCartCount() {
    fetch('/cart.js')
      .then(res => res.json())
      .then(cart => {
        cartState.count = cart.item_count;
        this.updateCartCountUI();
        cartState.isFirstAdd = cart.item_count === 0;
      });
  },

  addToCart(form) {
    if (cartState.isUpdating) return;

    cartState.isUpdating = true;
    const formData = new FormData(form);
    const addToCartButton = form.querySelector('.add-to-cart');
    const originalButtonHTML = addToCartButton.innerHTML;

    addToCartButton.disabled = true;
    addToCartButton.innerHTML = '<span class="loading-spinner"></span> Adding...';

    fetch('/cart/add.js', {
      method: 'POST',
      body: formData,
      headers: { 
        'Accept': 'application/json',
        'X-Requested-With': 'XMLHttpRequest'
      }
    })
    .then(response => response.json())
    .then(item => {
      if (cartState.isFirstAdd) {
        return this.initializeCartDrawer();
      } else {
        return this.getCartAndUpdate();
      }
    })
    .then(cart => {
      this.openCartDrawer();
      cartState.isFirstAdd = false;
    })
    .catch(error => {
      console.error("Error adding to cart:", error);
      addToCartButton.innerHTML = 'Error - Try Again';
    })
    .finally(() => {
      setTimeout(() => {
        addToCartButton.innerHTML = originalButtonHTML;
        addToCartButton.disabled = false;
        cartState.isUpdating = false;
      }, 1200);
    });
  },

  initializeCartDrawer() {
    return fetch('/cart.js')
      .then(res => res.json())
      .then(cart => {
        return fetch('/cart?section_id=cart-drawer')
          .then(response => response.text())
          .then(html => {
            const parser = new DOMParser();
            const doc = parser.parseFromString(html, 'text/html');
            const newCartDrawer = doc.querySelector('cart-drawer') || doc.querySelector('.cart-drawer');
            
            if (newCartDrawer) {
              const newDrawer = newCartDrawer.cloneNode(true);
              const oldDrawer = document.querySelector('cart-drawer') || document.querySelector('.cart-drawer');
              
              if (oldDrawer) {
                oldDrawer.replaceWith(newDrawer);
              } else {
                document.body.appendChild(newDrawer);
              }
              
              this.cartDrawer = newDrawer;
              this.cacheDOM();
              
              if (typeof this.cartDrawer.init === 'function') {
                this.cartDrawer.init();
              }
            }
            
            this.handleCartUpdated(cart);
            return cart;
          });
      });
  },

  getCartAndUpdate() {
    return fetch('/cart.js')
      .then(res => res.json())
      .then(cart => {
        this.handleCartUpdated(cart);
        return this.updateCartDrawerContents();
      });
  },

  handleCartUpdated(cart) {
    if (!cart) {
      return this.getCartAndUpdate();
    }

    cartState.count = cart.item_count;
    this.updateCartCountUI();
    
    document.dispatchEvent(new CustomEvent('cart:updated', {
      detail: { cart: cart }
    }));
    
    document.dispatchEvent(new CustomEvent('cart:refresh', {
      detail: { cart: cart },
      bubbles: true
    }));
  },

  updateCartCountUI() {
    if (this.cartCountEls) {
      this.cartCountEls.forEach(el => {
        el.textContent = cartState.count;
        el.classList.remove('hidden');
      });
    }
  },

  updateCartDrawerContents() {
    return fetch('/cart?section_id=cart-drawer')
      .then(response => response.text())
      .then(html => {
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');
        const newItems = doc.querySelector('cart-drawer-items') || doc.querySelector('.cart-drawer__items');
        
        if (newItems && this.cartDrawerContents) {
          this.cartDrawerContents.innerHTML = newItems.innerHTML;
          
          if (typeof window.Shopify?.updateCartDrawer === 'function') {
            window.Shopify.updateCartDrawer();
          }
        }
        
        return fetch('/cart.js').then(res => res.json());
      })
      .then(cart => {
        this.handleCartUpdated(cart);
        return cart;
      })
      .catch(error => {
        console.error('Error updating cart drawer:', error);
      });
  },

  openCartDrawer() {
    if (!this.cartDrawer) {
      console.warn('Cart drawer element not found');
      return;
    }

    setTimeout(() => {
      if (typeof this.cartDrawer.open === 'function') {
        this.cartDrawer.open();
      } else {
        this.cartDrawer.classList.add('is-visible');
        document.body.classList.add('overflow-hidden');
      }
    }, 150);
  }
};

document.addEventListener('DOMContentLoaded', () => {
  CartFunctions.init();
  
  document.getElementById('fitPopup')?.addEventListener('click', function(e) {
    if (e.target === this) {
      closePopup();
    }
  });
});
</script>



